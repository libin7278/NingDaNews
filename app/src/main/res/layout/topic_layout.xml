<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    >

    <RelativeLayout
        android:id="@+id/rl_ly_botton"
        android:layout_width="match_parent"
        android:layout_height="55dp"
        android:layout_alignParentBottom="true"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true"
        android:background="@drawable/bg_chat">

        <EditText

            android:id="@+id/et_input_msg"
            android:layout_width="match_parent"
            android:layout_height="40dp"
            android:layout_marginLeft="10dp"
            android:layout_marginRight="10dp"
            android:layout_centerVertical="true"
            android:background="#ffffff"
            android:textSize="18sp"
            android:layout_toLeftOf="@+id/btn_send_msg"/>

        <Button
            android:text="发送"
            android:id="@+id/btn_send_msg"
            android:layout_width="60dp"
            android:layout_marginRight="10dp"
            android:layout_height="40dp"
            android:background="@drawable/drable_selsct_abutton"
            android:layout_alignTop="@+id/et_input_msg"
            android:layout_alignParentRight="true"
            android:layout_alignParentEnd="true" />
    </RelativeLayout>

    <ListView
        android:divider="@null"
        android:dividerHeight="0dp"
        android:id="@+id/lv_msgs"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_above="@+id/rl_ly_botton"
        android:background="@drawable/bg_chat"
        >

    </ListView>
</RelativeLayout>
